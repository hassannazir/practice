@model IEnumerable<WebApplication17.Models.Student>

@{
    ViewData["Title"] = "AllStudents";
}

<h1>AllStudents</h1>

<p>
    <a href="/first/addnewstudent" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    <a href="/first/editstudent?id=@item.Id" class="btn btn-success btn-sm"><i class="fas fa-pencil-alt"></i></a>
                    <a href="/first/studentdetail?id=@item.Id" class="btn btn-primary btn-sm"><i class="fa fa-list"></i></a>
                    <a href="/first/deletestudent?id=@item.Id" class="btn btn-danger btn-sm "><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    $(function () {

        $('h1').click(function () {
            $('h1').hide();
        })
    });
</script>
